{
    "name": "@bombig/ui",
    "version": "0.0.65",
    "description": "Bombig.net Design System",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "type": "module",
    "style": "./dist/styles.css",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs",
            "default": "./dist/index.js"
        },
        "./styles": "./dist/styles.css",
        "./tailwind": "./dist/tailwind.config.js",
        "./fonts/*": "./dist/fonts/*"
    },
    "sideEffects": [
        "**/*.css"
    ],
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "build": "pnpm validate && tsup && pnpm build:css",
        "build:dev": "tsup && pnpm build:css",
        "build:css": "tailwindcss -i src/styles/globals.css -o dist/styles.css --minify && node scripts/copy-assets.js",
        "dev": "tsup --watch",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "pnpm validate && storybook build",
        "serve-storybook": "serve storybook-static -p 6006",
        "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
        "lint:fix": "eslint . --fix",
        "prepare": "husky",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
        "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
        "typecheck": "tsc --noEmit",
        "validate": "pnpm typecheck && pnpm lint && pnpm format:check && pnpm test",
        "validate:quick": "tsc --noEmit --incremental && eslint . --cache --report-unused-disable-directives --max-warnings 0 && pnpm format:check && pnpm test",
        "test": "jest --passWithNoTests --coverage",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:fix": "pnpm build:css && cat dist/styles.css | grep -n letter-spacing"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix --max-warnings 0",
            "prettier --write"
        ],
        "*.{json,md,css}": [
            "prettier --write"
        ]
    },
    "publishConfig": {
        "access": "public"
    },
    "license": "MIT",
    "peerDependencies": {
        "react": "^18.0.0",
        "react-dom": "^18.0.0"
    },
    "dependencies": {
        "@mui/base": "5.0.0-beta.68",
        "@radix-ui/react-accordion": "^1.2.3",
        "@radix-ui/react-dialog": "^1.1.6",
        "@radix-ui/react-icons": "^1.3.2",
        "@radix-ui/react-navigation-menu": "^1.2.5",
        "@radix-ui/react-separator": "^1.1.2",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "react-aria-components": "^1.7.1",
        "tailwind-merge": "^2.6.0"
    },
    "devDependencies": {
        "@axe-core/react": "^4.10.1",
        "@storybook/addon-essentials": "^8.6.4",
        "@storybook/addon-interactions": "^8.6.4",
        "@storybook/addon-links": "^8.6.4",
        "@storybook/cli": "^8.6.4",
        "@storybook/react": "^8.6.4",
        "@storybook/react-vite": "^8.6.4",
        "@storybook/types": "^8.6.4",
        "@swc/jest": "^0.2.37",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.2.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/glob": "^8.1.0",
        "@types/jest": "^29.5.14",
        "@types/jest-axe": "^3.5.9",
        "@types/node": "^22.13.10",
        "@types/react": "^19.0.10",
        "@types/react-dom": "^19.0.4",
        "@typescript-eslint/eslint-plugin": "^8.26.1",
        "@typescript-eslint/parser": "^8.26.1",
        "autoprefixer": "^10.4.21",
        "axe-core": "^4.10.3",
        "canvas": "^3.1.0",
        "eslint": "^9.22.0",
        "eslint-import-resolver-typescript": "^3.8.4",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-react": "^7.37.4",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-storybook": "^0.11.4",
        "eslint-plugin-tailwindcss": "^3.18.0",
        "glob": "^11.0.1",
        "globals": "^15.15.0",
        "husky": "^9.1.7",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^29.7.0",
        "jest-axe": "^9.0.0",
        "jest-environment-jsdom": "^29.7.0",
        "lint-staged": "^15.4.3",
        "postcss": "^8.5.3",
        "prettier": "^3.5.3",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "serve": "^14.2.4",
        "storybook": "^8.6.4",
        "tailwindcss": "^3.4.17",
        "ts-jest": "^29.2.6",
        "tsup": "^8.4.0",
        "typescript": "^5.8.2"
    }
}
