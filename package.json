{
    "name": "@bombig/ui",
    "version": "0.1.0",
    "description": "Bombig.net Design System",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "type": "module",
    "sideEffects": false,
    "files": [
        "dist",
        "src/styles/tokens.css",
        "src/styles/tokens.js"
    ],
    "scripts": {
        "prebuild": "node build-tokens.mjs",
        "build": "tsup",
        "predev": "node build-tokens.mjs",
        "dev": "concurrently \"node build-tokens.mjs --watch\" \"tsup --watch\"",
        "prestorybook": "node build-tokens.mjs",
        "storybook": "concurrently \"node build-tokens.mjs --watch\" \"storybook dev -p 6006\"",
        "prebuild-storybook": "node build-tokens.mjs",
        "build-storybook": "storybook build",
        "serve-storybook": "serve storybook-static -p 6006",
        "changeset": "changeset",
        "version": "changeset version",
        "prerelease": "pnpm build",
        "release": "changeset publish"
    },
    "publishConfig": {
        "access": "public"
    },
    "peerDependencies": {
        "react": "^18.0.0",
        "react-dom": "^18.0.0"
    },
    "dependencies": {
        "@radix-ui/primitive": "^1.1.1",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "react-aria-components": "^1.5.0",
        "tailwind-merge": "^2.6.0"
    },
    "devDependencies": {
        "@changesets/cli": "^2.27.1",
        "@storybook/addon-essentials": "^8.4.7",
        "@storybook/addon-interactions": "^8.4.7",
        "@storybook/addon-links": "^8.4.7",
        "@storybook/cli": "^8.4.7",
        "@storybook/react": "^8.4.7",
        "@storybook/react-vite": "^8.4.7",
        "@storybook/types": "^8.4.7",
        "@tokens-studio/sd-transforms": "^1.2.9",
        "@types/node": "^22.10.2",
        "@types/react": "^19.0.2",
        "@types/react-dom": "^19.0.2",
        "autoprefixer": "^10.4.20",
        "concurrently": "^8.2.2",
        "postcss": "^8.4.49",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "serve": "^14.2.4",
        "storybook": "^8.4.7",
        "style-dictionary": "^4.3.0",
        "tailwindcss": "^3.4.17",
        "tsup": "^8.3.5",
        "typescript": "^5.7.2"
    }
}